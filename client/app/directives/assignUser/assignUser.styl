@import '../../../style'

.assignUser
  position relative
  border-radius 6px
  padding 6px

  .user-list-header
    clearfix()

  h4
    margin 20px 0
    col(1/2)
  
  input
    col(1/2)
    edit-input()
    font-size 12px
    height 24px
    margin-top 12px

  .current-user-list
    clearfix()
    
  .current-user-list>span
      col(1/3, 0, 3)
      tag(accent-color)
      cursor pointer
      margin-top 6px
  
  .all-user-list
    clearfix()
    
    border 2px solid CONCRETE
    border-radius 6px
    padding 12px
    max-height 120px
    overflow scroll
      
    .all-user-list>span
      cursor pointer
      display block
      color text-color
      padding 8px
      margin-bottom 6px
      border-bottom 1px solid lighten(primary-color, 25%)
      text-align center
      &:hover
        background-color SILVER
